{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "ES2019"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
  },
  "exclude": [
    "node_modules",
    "public",
  ],
  "include": ["./src/**/*"]
}